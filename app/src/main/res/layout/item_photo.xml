<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
>
    <FrameLayout android:layout_width="match_parent" android:layout_height="150dp"
                 android:layout_alignParentStart="true" android:layout_marginStart="0dp">
        <ImageView android:id="@+id/photoView" android:layout_width="match_parent" android:layout_height="150dp"
                   android:src="@drawable/view"
        />

        <LinearLayout
                android:id="@+id/likesLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:orientation="horizontal"
                android:layout_gravity="center"
        >

            <TextView
                    android:id="@+id/likesText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="10dp"
                    android:text="@string/likes"
                    android:textSize="20sp"
                    android:textColor="@color/white"/>
            <TextView
                    android:id="@+id/likes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="20sp"
                    android:textColor="@color/white"/>
        </LinearLayout>

        <LinearLayout
                android:id="@+id/votesLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
        >
            <TextView
                    android:id="@+id/votesText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="10dp"
                    android:text="@string/votes"
                    android:textSize="20sp"
                    android:textColor="@color/white"/>

            <TextView
                    android:id="@+id/votes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="20sp"
                    android:textColor="@color/white"/>
        </LinearLayout>

        <LinearLayout
                android:id="@+id/viewsLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="60dp"
        >
            <TextView
                    android:id="@+id/viewsText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="10dp"
                    android:text="@string/views"
                    android:textSize="20sp"
                    android:textColor="@color/white"/>

            <TextView
                    android:id="@+id/views"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="20sp"
                    android:textColor="@color/white"/>
        </LinearLayout>
    </FrameLayout>

</RelativeLayout>
